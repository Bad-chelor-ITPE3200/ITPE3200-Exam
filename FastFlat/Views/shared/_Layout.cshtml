<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Home"]</title>
    <!-- jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery UI library -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>

    <!-- Bootstrap library -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/dropdown.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav>
            <h1 id="--nav-logo">Fast&Flat</h1>
            <ul class="--nav-tabs">
                <li class="nav-list">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="activeTab">Home</a>
                </li>
                <li class="nav-list">
                    <a asp-area="" asp-controller="Explorer" asp-action="Explore">Rentals</a>
                </li>
                <li class="nav-list">
                    <a href="#">Help</a>
                </li>

            @if(User.IsInRole("Admin"))  {    <li class="nav-list">
                    <a asp-area="" asp-controller="Account" asp-action="Account">Accounts</a>
                </li>
                <li class = "nav-list">
                    <a asp-area=""  asp-controller="Account" asp-action="ManageAllBookings">all bookings</a>
                </li>
            }
           

            </ul>

            <partial name="_LoginPartial" />

            <!--
            <div id="--nav-profile">
                <div class="icon">
                    <img src="./pictures/profile.png" alt="Picture of the menu button" width = "60" height = 60 >
                    <div class="out">
                        <div>

                        </div>
                    </div>
                </div>

            </div>
            -->
        </nav>
    </header>
    @RenderBody()
    @RenderSection("scripts", required: false)
    <footer>
        <div class="container">
            <p class="lead">Copyright</p>
        </div>
    </footer>
</body>
</html>