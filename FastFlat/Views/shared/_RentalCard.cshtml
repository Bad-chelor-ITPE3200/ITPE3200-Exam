
<a asp-area="" asp-controller="Explorer" asp-action="ViewListing" asp-route-listingId="@Model.ListningId">
    <div class="rental_card">
        <img src="@Model.ListningImageURL" alt="Rental Image">
        <div class="card_info">
            <h5>@Model.ListningName</h5>
            <p>@Model.FromDate.ToString("dd.MM.yyyy") - @Model.ToDate.ToString("dd.MM.yyyy")</p>
            <p><span class="pricePerNight">kr @Model.ListningPrice</span> natt.</p>
            <div class="card--footer">
                    @foreach (var listningAmenity in Model.ListningAmenities)
                    {
                            <img src="@listningAmenity.Amenity.AmenityLogo" alt="@listningAmenity.Amenity.AmenityName" />
                    }
            </div>
        </div>
        
    </div>
</a>