@model RentalListViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/explore.css" />
    <link rel="stylesheet" href="~/css/rentalCard.css" />
}

<section class="hero">
    <div class="search-section">
        <partial name="_SearchBar" />
    </div>
    <div id="filters">
        @foreach (var amenity in Model.Amenities)
        {
            var isActive = (amenity.AmenityName == (string)ViewBag.SelectedAmenity) ? "active" : ""; // Dette antar at du lagrer den valgte amenity i ViewBag
            <form asp-action="Explore" method="post">
                <button type="submit" name="SelectedAmenities" value="@amenity.AmenityName" class="amenity-button @isActive">
                    @amenity.AmenityName
                    <img class="amenity-icon" src="@amenity.AmenityLogo" />
                </button>
            </form>
        }
    </div>
    <div class="result-wrapper">
        <div id="results">
            @foreach (var rental in Model.Rentals)
            {
                <partial name="_RentalCard" model="rental" />
            }
        </div>
        <div class="map">
        </div>
    </div>
</section>
