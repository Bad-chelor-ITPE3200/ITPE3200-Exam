@section Styles {
    <link rel="stylesheet" href="~/css/index.css" />
}
@model ListningModel

<section class="hero">
    <div class="hero-wrapper">
        <div class="hero-left">
            <div class="hero-title">
                <h1>Finding your rental has never been easier.</h1>
                <p>Lorem ipsum dolor si ames ah detru luer afn ela dilasti hestem lak.</p>
            </div>
            <form asp-controller="Explorer"  asp-action="Explore" method="post">
                <div class="searchbar">
                    <div class="location">
                        <label asp-for="Contry" class="searchbar-title">Hvor</label>
                        <select asp-for="Contry" id="countryDropdown">
                            <!-- Options will be displayed here dynamically -->
                        </select>
                    </div>
                    <div class="fromDate">
                        <label asp-for="FromDate" class="searchbar-title">Innsjekking</label>
                        <input asp-for="FromDate" type="date" placeholder="Legg til dato" id="fromDate" min="@DateTime.Today.ToString("yyyy-MM-dd")" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="toDate">
                        <label asp-for="ToDate" class="searchbar-title">Utsjekking</label>
                        <input asp-for="ToDate" type="date" placeholder="Legg til dato" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" id="toDate" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")">
                    </div>
                    <div class="guests">
                        <label asp-for="NoOfBeds" class="searchbar-title">Bed(s)</label>
                        <input asp-for="NoOfBeds" placeholder="Legg til antall senger" id="guests">
                    </div>
                    <button id="submit-btn">
                        <img src="@Url.Content("~/images/icons/search.svg")">
                    </button>
                </div>
            </form>

        </div>
        <div class="hero-right">
            <div class="thumbnail">
                <div class="thumbnail-marker">
                    <img src="@Url.Content("~/images/icons/marker.svg")">
                </div>
                <div class="thumbnail-text">
                    <h5 class="card-title">Bahamas resort</h5>
                    <p>17.-21. sep.</p>
                    <p class="card-subtitle mb-2 text-body-secondary"><span class="price">1345 NOK</span> per natt</p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>

    $(document).ready(function () {
        $.ajax({
            url: '/api/available-countries',
            type: 'GET',
            success: function (data) {
                console.log(data);
                let countries = data.result; // Access the result property directly
                let dropdown = $("#countryDropdown");
                countries.forEach(function (country) {
                    dropdown.append(new Option(country, country));
                });
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error("Error fetching countries:", textStatus, errorThrown);
            }
        });

        $("#countryDropdown").on("change", function () {
            let value = $("#countryDropdown").val();
            console.log(value);
        });

        $("#fromDate").on("change", function () {
            let fromDateValue = $(this).val();
            $("#toDate").attr("min", fromDateValue);

            // If the current ToDate value is less than the new FromDate value, reset the ToDate value
            if ($("#toDate").val() < fromDateValue) {
                $("#toDate").val(fromDateValue);
            }
        });
    });

</script>