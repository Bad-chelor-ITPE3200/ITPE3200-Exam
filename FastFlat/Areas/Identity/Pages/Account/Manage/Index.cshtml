@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="index-settings">
    <h3>@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <!-- We need the enctype="multipart/form-data because the form will take binary as input -->

    <form id="profile-form" method="post" enctype="multipart/form-data" class="index-form">
            <div class="index-inputs">
                <!-- Model only displays a summary of model-level validation errors -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="index-cluster">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <label asp-for="Input.FirstName" class="form-label"></label>
                </div>
            <div class="index-cluster">
                    <input asp-for="Input.LastName" class="form-control" />
                    <label asp-for="Input.LastName" class="form-label"></label>
                </div>
            <div class="index-cluster">
                    <input asp-for="Username" class="form-control" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
            <div class="index-cluster">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="index-pfp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="pfp-wrapper">
                    
                    @if (Model.Input.ProfilePicture != null)
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                    }
                    else
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                    }
                    <label for="Input_ProfilePicture" class="update-profile-button" style="margin-top: 1rem;">
                        Upload profile picture
                    </label>
                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                           asp-for="Input.ProfilePicture"
                           id="Input_ProfilePicture"
                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>
            </div>
        <button id="update-profile-button" type="submit" class="update-profile-button">Save</button>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}