@page
@model FastFlat.Areas.Identity.Pages.Account.Manage.RentalsModel
@{
    ViewData["Title"] = "Rentals";
    ViewData["ActivePage"] = ManageNavPages.Rentals;
}
<h2>@ViewData["Title"]</h2>

<div>
    @foreach (var rental in Model.Rentals)
    {
        <partial name="_RentalCard" model="rental" />
        <a asp-controller="Account" asp-action="DeleteAlistingNormalUser" class="btn btn-danger" asp-route-id="@rental.ListningId">Delete Listing</a>
        <a asp-controller="Account" class="btn btn-secondary"asp-action="_UpdateListing" asp-route-id="@rental.ListningId"> update Listing</a>
    }
    <br/>
    <a class="btn btn-primary"
       asp-controller="Listing"
       asp-action="NewListning">
        Registrer nytt rom
    </a>
</div>